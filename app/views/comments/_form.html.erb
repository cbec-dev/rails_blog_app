<h3>Agregar un comentario</h3>

<%= form_for [@article, @comment] do |f|%>
    <p>
        <%= f.label :author_name, 'Nombre' %><br/>
        <%= f.text_field :author_name %>
    </p>
    <p>
        <%= f.label :body, 'Comentario' %><br/>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit 'Agregar'%>
    </p>
<% end %>